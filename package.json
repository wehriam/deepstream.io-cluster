{
  "name": "deepstream.io-cluster",
  "version": "0.7.0",
  "description": "Community supported clustering for Deepstream.io",
  "main": "dist/index.js",
  "scripts": {
    "test": "yarn lint && yarn test:js",
    "test:js": "cross-env NODE_ENV=test jest --runInBand test",
    "coverage": "codecov",
    "start-pre-commit": "git stash -q --keep-index",
    "end-pre-commit": "git add -u && git stash pop -q",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build:types": "tsc",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "tsc": "rm -rf dist && tsc && cp ./package.json ./dist/package.json",
    "lint": "tslint test/*.ts src/*.ts test/**/*.ts src/**/*.ts -t verbose",
    "lint:fix": "tslint --fix test/*.ts src/*.ts test/**/*.ts src/**/*.ts -t verbose"
  },
  "pre-commit": [
    "lint",
    "start-pre-commit",
    "build",
    "end-pre-commit"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wehriam/deepstream.io-cluster.git"
  },
  "author": "John Wehr <johnwehr@gmail.com>",
  "license": "AGPL-3.0",
  "lint-staged": {
    "*.js": [
      "eslint -c .eslintrc --ignore-path .eslintignore"
    ]
  },
  "dependencies": {
    "nanomsg-cluster": "^0.6.0"
  },
  "peerDependencies": {
    "deepstream.io": "3.1.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.15",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "deepstream.io": "3.1.2",
    "deepstream.io-client-js": "^2.3.0",
    "eslint": "^5.10.0",
    "eslint-config-bunchtogether": "^1.1.6",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-flowtype-errors": "^3.6.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "expect": "^23.6.0",
    "flow-bin": "^0.89.0",
    "flow-copy-source": "^2.0.2",
    "flow-remove-types": "^1.2.3",
    "flow-typed": "^2.5.1",
    "ip": "^1.1.5",
    "jest": "^23.6.0",
    "jest-flow-transform": "^1.0.1",
    "lint-staged": "^8.1.0",
    "pre-commit": "^1.2.2",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.3.0",
    "ts-jest": "^23.10.5",
    "uuid": "^3.3.2"
  },
  "bugs": {
    "url": "https://github.com/wehriam/deepstream-cluster/issues"
  },
  "homepage": "https://github.com/wehriam/deepstream-cluster"
}
